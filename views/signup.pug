extends base

block content
	main.main
	.signUp-form
		h2.heading-secondary.ma-bt-lg CREATE YOUR ACCOUNT
		form.form.form--signup
			.form__group
				label.form__label(for='firstName') First Name
				input#firstName.form__input(type='text', placeholder='First', required)
			.form__group
				label.form__label(for='lastName') Last Name
				input#lastName.form__input(type='text', placeholder='Last', required)
			.form__group
				label.form__label(for='email') Email address
				input#email.form__input(type='email', placeholder='you@example.com', required, autocomplete='email')
			.form__group.ma-bt-md
				label.form__label(for='newPassword') Password
				input#password.form__input(type='password', placeholder='min 8 characters', required, minlength='8')
			.form__group.ma-bt-md
				label.form__label(for='confirmPassword') Confirm Password
				input#confirmPassword.form__input(type='password', placeholder='••••••••', required, minlength='8')
			.form__group
				button.btn.btn--green signup